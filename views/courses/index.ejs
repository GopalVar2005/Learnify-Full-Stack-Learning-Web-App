<% layout('layouts/boilerplate') %>

<%- include('../partials/navbar') %>    
<%- include('../partials/flash') %>    

<div class="container mt-4">
  <!-- Search and Filter Section -->
  <div class="row mb-4">
    <div class="col-md-12">
      <form method="GET" action="/courses" class="row g-3">
        <div class="col-md-4">
          <input type="text" class="form-control" name="search" placeholder="Search courses..." value="<%=search%>">
        </div>
        <div class="col-md-3">
          <select class="form-select" name="category">
            <option value="">All Categories</option>
            <% if(categories && categories.length > 0){ %>
              <% categories.forEach(cat => { %>
                <option value="<%=cat%>" <%=category === cat ? 'selected' : ''%>><%=cat%></option>
              <% }) %>
            <% } %>
          </select>
        </div>
        <div class="col-md-2">
          <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
        <div class="col-md-3">
          <a href="/courses" class="btn btn-secondary w-100">Clear Filters</a>
        </div>
      </form>
    </div>
  </div>

  <!-- Courses Grid -->
  <div class="row">
    <% if(typeof courses !== 'undefined' && courses && courses.length > 0){ %>
      <% courses.forEach(item => { %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card shadow-sm h-100">
            <img src="<%=item.img%>" class="card-img-top" alt="<%=item.name%>" style="height: 200px; object-fit: cover;">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%=item.name%></h5>
              <p class="card-text text-muted flex-grow-1"><%=item.desc && item.desc.length > 100 ? item.desc.substring(0, 100) + '...' : item.desc%></p>
              <div class="d-flex justify-content-between align-items-center mb-2">
                <h6 class="mb-0">â‚¹<%=item.price%></h6>
                <% if(item.category){ %>
                  <span class="badge bg-secondary"><%=item.category%></span>
                <% } %>
              </div>
              <div class="d-flex gap-2">
                <a href="/courses/<%=item._id%>" class="btn btn-primary btn-sm flex-grow-1">View Course</a>
                <%if(currentUser && currentUser.role==='instructor'){%>
                  <form class="d-inline-block" action="/courses/<%=item._id%>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this course?');">
                    <button class="btn btn-sm btn-danger">Delete</button>
                  </form>
                <%}%>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12">
        <div class="alert alert-info text-center">
          <h5>No courses found</h5>
          <p>Try adjusting your search or filter criteria.</p>
        </div>
      </div>
    <% } %>
  </div>

  <!-- Pagination -->
  <% if(totalPages > 1){ %>
    <nav aria-label="Page navigation" class="mt-4">
      <ul class="pagination justify-content-center">
        <% if(hasPrevPage){ %>
          <li class="page-item">
            <a class="page-link" href="/courses?page=<%=currentPage - 1%><%=search ? '&search=' + search : ''%><%=category ? '&category=' + category : ''%>">Previous</a>
          </li>
        <% } %>
        
        <% for(let i = 1; i <= totalPages; i++){ %>
          <li class="page-item <%=i === currentPage ? 'active' : ''%>">
            <a class="page-link" href="/courses?page=<%=i%><%=search ? '&search=' + search : ''%><%=category ? '&category=' + category : ''%>"><%=i%></a>
          </li>
        <% } %>
        
        <% if(hasNextPage){ %>
          <li class="page-item">
            <a class="page-link" href="/courses?page=<%=currentPage + 1%><%=search ? '&search=' + search : ''%><%=category ? '&category=' + category : ''%>">Next</a>
          </li>
        <% } %>
      </ul>
    </nav>
  <% } %>
</div>

</body>
</html>