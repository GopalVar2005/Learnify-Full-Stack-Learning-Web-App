<% layout('layouts/boilerplate') %>

<%- include('../partials/navbar') %>  
<%- include('../partials/flash') %>  

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-body p-4">
          <h2 class="mb-4">Add New Lesson to <%= course.name %></h2>
          
          <form action="/courses/<%= course._id %>/lesson" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="title" class="form-label">Lesson Title</label>
              <input type="text" name="title" id="title" class="form-control" placeholder="Enter lesson title" required>
            </div>
            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea name="description" id="description" rows="4" class="form-control" placeholder="Enter lesson description"></textarea>
            </div>
            <div class="mb-3">
              <label for="video" class="form-label">Upload Video</label>
              <input type="file" name="video" id="video" accept="video/*" class="form-control" required>
              <small class="form-text text-muted">Supported formats: MP4, MOV, AVI, MKV</small>
            </div>
            <div class="d-flex gap-2">
              <button class="btn btn-primary" type="submit">Upload Lesson</button>
              <a href="/courses/<%= course._id %>" class="btn btn-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
